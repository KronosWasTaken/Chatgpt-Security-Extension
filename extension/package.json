{
  "name": "uploaded-file-scanner",
  "displayName": "Uploaded file scanner",
  "version": "1.0.0",
  "description": "A Chrome extension that scans uploaded files for security threats",
  "author": "Aaditya Raj",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://localhost:*/*",
      "http://127.0.0.1:*/*"
    ],
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "webRequest",
      "tabs",
      "sidePanel"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
}
